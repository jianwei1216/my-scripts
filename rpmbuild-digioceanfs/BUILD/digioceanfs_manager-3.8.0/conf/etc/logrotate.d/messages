/var/log/messages {
    size=300M
    rotate 1
    notifempty 
    create 0600 root root
    sharedscripts
        prerotate
            /usr/bin/chattr -a /var/log/messages
    endscript
    sharedscripts
        postrotate
            /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
            /usr/bin/chattr +a /var/log/messages
    endscript
}
