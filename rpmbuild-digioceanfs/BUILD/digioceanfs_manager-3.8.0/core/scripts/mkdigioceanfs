#!/usr/bin/python
 
import threading
import os
import sys
 
def mkfs(diskpath):
    print diskpath
    ret = os.system('mkfs.xfs -f /dev/%s' % diskpath)
 
def exeThread(diskslist):
    thlist = []
    for disk in diskslist:
        th = threading.Thread(target=mkfs, args=(disk,))
        th.start()
 
if __name__ == '__main__':
    diskslist = sys.argv[1:]
    exeThread(diskslist)
